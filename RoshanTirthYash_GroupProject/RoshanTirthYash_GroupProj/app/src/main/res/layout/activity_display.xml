<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/prod_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                app:cardBackgroundColor="#860744" />

            <androidx.cardview.widget.CardView
                android:id="@+id/qntty_card"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="580dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/vidaloka"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/text_rat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="100dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="#C13D7C"
            android:progressTint="#FFC107"
            android:scaleX="0.5"
            android:scaleY="0.5"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text_desciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/vidaloka"
            android:text="A hardy grape varietal, the Mertol wine grape produces a variety of flavors depending on where it's grown."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/vidaloka"
            android:text="Regions"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_regions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="310dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/vidaloka"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="340dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="Volume" />

        <TextView
            android:id="@+id/text_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="390dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="Sweetness" />

        <TextView
            android:id="@+id/text_sweetness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="410dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="440dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="Color" />

        <TextView
            android:id="@+id/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="460dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="490dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="Year" />

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vidaloka"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="510dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="1998"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="167dp"
            android:layout_height="550dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            tools:srcCompat="@drawable/red_wine_1" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="590dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="$ 00"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/quantitiy_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="580dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/minus_remove_10" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="587.5dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/quantitiy_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="580dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/plus_add_10" />

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="630dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/white"
            android:onClick="buy_click"
            android:text="Checkout"
            android:textColor="#860744"
            android:textStyle="bold"
            app:cornerRadius="50dp" />

    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>


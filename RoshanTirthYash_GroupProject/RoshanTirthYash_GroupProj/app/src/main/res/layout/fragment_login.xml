<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:backgroundTint="@color/transparent"
    android:gravity="center">

    <EditText
        android:id="@+id/log_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edit_txt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="username"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColorHint="#860744" />

    <EditText
        android:id="@+id/log_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_username"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_txt"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="#860744" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_password"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_dsply_clr"
        android:text="Login" />


</RelativeLayout>